@require "./parts/reset.css"
@require "./parts/constants.styl"
@require "./parts/fontfaces.styl"
@require "./parts/keyframes.styl"

@require "./review-card.styl"
@require "./skill-card.styl"


body
	font-family "Poppins regular", sans-serif

a
	text-decoration none
	color pureWhite
	&:visited
		color pureWhite

.colored-background
	color pureWhite


.get-in-touch-button
	display inline-block
	background-color braveOrange
	border-radius 20px
	padding 10px
	text-decoration none
	color pureWhite
	&::before
		content 'â€‹'
		display inline-block
		width 50%
		min-height 100%
		background-image url('../img/svg/logo.svg')
		background-repeat no-repeat


// JS alert
#no-js-alert
	display block
	position fixed
	bottom 0
	min-width 100vw
	text-align center
	padding 1em
	background-color rgb(224, 38, 38)
	color pureWhite
	animation show-then-retract 2s ease-in 5s 1 forwards
	z-index 10


// top nav
#nav
	position sticky
	top 0
	float left
	width 100%
	display flex
	justify-content space-between
	align-items center
	background-color rgba(28, 28, 28, 0.88)
	color pureWhite
	font-size .8em
	max-height navBarHeight
	& img
		margin-left 1.25em
		border-radius 50%
	& ul
		position absolute
		left 5%
		display flex
		flex-direction column
		gap 25px
		box-shadow 0 4px 0 braveOrange inset // "outline top"
		min-width 80%
		background-color #000
		transform translateY(59%)
		height 0
		overflow hidden
		transition-property height, padding
		transition-duration .1s
		& li:last-child
			outline 1px solid pureWhite
			outline-offset 7px;
			border-radius 9px
		&.opened
			height initial
			padding 5%
	& .burger-menu
		margin-right 1.25em
		background none
		border none
		background-image url('/img/burger.svg')
		background-size contain
		min-width 32px
		min-height 32px
		

// mobile
@media(min-width: 980px)
	#nav
		min-height 10vh
		& ul
			margin-right 1.25em
			position initial
			flex-direction row
			box-shadow none
			min-width initial
			background none
			transform none
			height initial
			overflow initial
		& .burger-menu
			display none

