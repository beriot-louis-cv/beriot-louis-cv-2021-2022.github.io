// header
header
	padding-top sum(navBarHeight 15px)
	margin-bottom 400px
	background linear-gradient(93.82deg, #542FA7 2.35%, #B2226D 88.4%);
	text-align center
// &::after
// 	display block
// 	width 100%
// 	height 100%
// 	content ''
	& h1
		font-size 30px
		font-weight 500
		color pureWhite
		padding-top 15px
	& #sub-h1
		margin-top 20px
	& .get-in-touch-button
		margin-top 25px
#small-message
	margin-top 5px
	line-height 2.2em
	font-family "Mulish light", sans-serif
	font-size 6.5pt
#hero-graphic
	margin-top 30px
	width 70%
	height auto

#video
	text-align center
	margin-bottom 500px

//skills
#skills-section
	display flex
	flex-direction column
	gap 64px

// reviews and faq
#page-bottom
	padding-top 320px
	background #202020
	padding-bottom 130px
#reviews
	display flex
	flex-flow column nowrap
	gap 60px
	margin-bottom 200px
#faq
	margin auto
	max-width 60%
	border-top 2px solid rgba(255, 255, 255, .2)
	& li
		min-height 34px
		border-bottom 2px solid rgba(255, 255, 255, .2)
		vertical-align middle
		display flex
		flex-direction column
		justify-content center
		cursor pointer
		& p
			min-height 0
			max-height 120px
			transition min-height .2s ease-out
			overflow hidden
			display flex
			flex-direction column
			justify-content center
			cursor initial
			&.unrolled
				min-height 120px

// footer
footer
	padding 60px 0 50px
	background #2C2C34
	display flex
	justify-content center
	gap 60px
	& address
		margin-bottom 20px
	& select
		background #1D2029
		border 1px solid #5E6175
		color braveDarker
		border-radius 5px
		padding 6px
		padding-left 12px
		font-size 7.5pt
		min-width 75%