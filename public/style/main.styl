@require "./parts/reset.css"
@require "./parts/constants.styl"
@require "./parts/fontfaces.styl"
@require "./parts/keyframes.styl"

@require "./review-card.styl"

body
	font-family "Poppins regular", sans-serif;
a
	text-decoration none
	color #fff
a:visited
	color #fff


.get-in-touch-button
	background-color braveOrange
	border-radius 15%
	padding 10px
	text-decoration none
	color white
.get-in-touch-button::before
	// background-image: url('../resources/images/')
#reviews::before
	// background-image: url('../resources/images/')

// JS alert
#no-js-alert
	display block
	position fixed
	bottom 0
	min-width 100vw
	text-align center
	padding 1em
	background-color rgb(224, 38, 38)
	color white
	animation show-then-retract 2s ease-in 5s 1 forwards

// header
header
	background linear-gradient(93.82deg, #542FA7 2.35%, #B2226D 88.4%);
	text-align center
// header::after
// 	display block
// 	width 100%
// 	height 100%
// 	content ''


header h1
	font-size 30px
	font-weight 500
	color white
	margin-top 15px

// top nav
#sticky-nav
	position sticky
	top 0
	display flex
	flex-flow row nowrap
	justify-content space-between
	padding 0 1.25em
	align-items center
	min-height 5vh
	background-color rgba(28, 28, 28, 0.88)
	color #fff
#sticky-nav img
	border-radius 50%
#sticky-nav ul
	display flex
	flex-direction row
	gap 25px
#sticky-nav ul li:last-child
	outline 1px solid #fff
	outline-offset 6px;
	border-radius 9px
